<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/project_item_margin"
    android:gravity="center_horizontal">
    <LinearLayout
        android:layout_width="@dimen/project_item_width"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/image_view"
            android:layout_width="@dimen/project_item_width"
            android:layout_height="@dimen/project_item_height"
            android:padding="2dp"
            android:background="@drawable/bgr_project_item_normal"
            android:scaleType="fitXY"/>
        <TextView
            android:id="@+id/name_project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="aa"
            android:textColor="#ffffff"/>
    </LinearLayout>
</LinearLayout>